<?xml version="1.0" encoding="utf-8"?>

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:padding="20dp"
            android:background="@drawable/border1">

    <TextView
        android:id="@+id/textViewTaskDescription"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/descricao"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:gravity="start"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/editTextTodoDescription"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:autofillHints=""
        android:gravity="bottom"
        android:hint="@string/descricao"
        android:textColor="@color/black"
        android:textColorHint="@color/lightgray"
        tools:ignore="VisualLintTextFieldSize"
        android:layout_marginTop="10dp"

        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTaskDescription" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTodoDescription" />

            <Button
                android:id="@+id/buttonCreateTodo"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/criar"
                android:textColor="@color/white"
                android:background="@color/pattern_blue"
                android:layout_marginTop="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTodoDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>
